{
  "manifest_version": 3,
  "name": "FinaHack",
  "version": "0.3.0",
  "description": "Une extension pour int√©ragir avec Finary",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "cookies",
    "storage",
    "tabs",
    "notifications"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "extension_icon16.png",
    "32": "extension_icon32.png",
    "48": "extension_icon48.png",
    "128": "extension_icon128.png"
  },
  "host_permissions": [
    "*://*.finary.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.finary.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/export-csv.js",
        "src/injected.js",
        "lib/plotly.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
