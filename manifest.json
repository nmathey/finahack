{
  "manifest_version": 3,
  "name": "FinaHack",
  "version": "0.2.4",
  "description": "Une extension pour int√©ragir avec Finary",
  "permissions": [
    "contextMenus", 
    "scripting", 
    "activeTab", 
    "cookies", 
    "storage", 
    "tabs",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "extension_icon16.png",
    "32": "extension_icon32.png",
    "48": "extension_icon48.png",
    "128": "extension_icon128.png"
  },
  "host_permissions": [
    "*://*.finary.com/*",
    "https://api.realtoken.community/*",
    "https://blockscout.com/*",
    "https://api.vfhome.fr/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.finary.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/export-csv.js",
        "injected.js",
        "consolidateAssets.js",
        "add_real_estate.js",
        "token-input.html",
        "token-input.js",
        "json_viewer_realt.html",
        "realt-viewer.js",
        "etf-overlap-analyzer.js",
        "etf-overlap-ui.js",
        "lib/plotly.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],"content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}